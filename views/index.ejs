<% layout("/layouts/boilerplate") -%>

<body>
    <div class="container">
        <div class="row  my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                 <div class="alert alert-dismissible fade show alert-<%=message.type%>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                 </div>
                <% } %>
                <div class="table-responsive">
                    <% if (users != '') { %>
                        <table class="table table-striped text-center my-5">
                            <thead>
                                <tr class="table-dark">
                                    <td>ID</td>
                                    <td>Image</td>
                                    <td>Name</td>
                                    <td>E-Mail</td>
                                    <td>Phone</td>
                                    <td>Action</td>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((row,index) => { %>
                                    <tr class="align-middle">
                                        <td><%= index+1 %></td>
                                        <td><img src="<%=row.image %>" class="img-thumbnail" width="50"></td>
                                        <td><%= row.name%></td>
                                        <td><%=row.email %></td>
                                        <td><%=row.phone %></td>
                                        <td>
                                            <a href="/edit/<%=row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            <a href="/delete/<%=row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">No user found in database</h1>
                   <% } %>
                </div>
            </div>
        </div>
    </div>
</body>